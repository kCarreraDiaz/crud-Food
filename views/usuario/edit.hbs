<div class="container">
    <div class="formulario">

    
    <div class="title-card">
        <h2>Editar Usuario</h2>
    </div>

    <form action="/usuarios/update/{{ usuario.id }} " method="post">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input class="form-control" type="text" id="nombre" name="nombre" value="{{ usuario.nombre }}"/>
        </div>
        <div class="form-group">
            <label for="apellido">Apellido</label>
            <input class="form-control" type="text" id="apellido" name="apellido" value="{{ usuario.apellido }}"/>
        </div>
        <div class="form-group id">
            <label for="dni">DNI</label>
            <input class="form-control" type="text" id="dni" name="dni" value="{{ usuario.dni }}"/>
        </div>
        <div class="form-group id">
            <label for="telefono">Teléfono</label>
            <input class="form-control" type="text" id="telefono" name="telefono" value="{{ usuario.telefono }}"/>
        </div>
        <div class="form-group">
            <label for="direccion">Dirección</label>
            <input class="form-control" type="text" id="direccion" name="direccion" value="{{ usuario.direccion }}"/>
        </div>
                        
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Update" />
        </div>
    </form>
    </div>
</div>
