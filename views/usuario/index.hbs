<div class="title">
    <h1>Usuarios</h1>
</div>
<div class="container">
    {{#if success}}
        <div class="alert alert-success" role="alert">
            {{success}}
        </div>
    {{/if}} 
    <h3> <a class="add" href="/usuarios/create"> Crear Usuario </a></h3>
    <h2>Lista de Usuarios</h2>
    {{#if usuarios }}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>DNI</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    
                </tr>
            </thead>
            <tbody>
                {{# each usuarios }}
                <tr>
                    <td> <a href="/usuarios/show/{{ _id  }}"> {{ nombre }}  </td>
                    <td> {{ apellido }} </td>
                    <td> {{ dni }} </td>
                    <td> {{ telefono }} </td>
                    <td> {{ direccion }} </td>
                    
                </tr>
                {{/each}}
            </tbody>
        </table>
    {{~^~}}
        <div>Usuarios no encontradas</div>
    {{/if}}
</div>

