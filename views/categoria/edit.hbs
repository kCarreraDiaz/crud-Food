<div class="container">
    <div class="formulario">
    <div class="title-card">
        <h2>Editar categoria</h2>
    </div>
    <form action="/categorias/update/{{ categoria.id }}" method="post">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input class="form-control" type="text" name="nombre" id="nombre" value="{{categoria.nombre}}">
        </div>
        <div class="form-group">
            <label for="descripcion">Descripcion</label>
            <textarea class="form-control" name="descripcion" id="descripcion">{{categoria.descripcion}}</textarea>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Actualizar">
        </div>
    </form>
    </div>
</div>