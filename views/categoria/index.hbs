<div class="title">
    <h1>Categorias</h1>
</div>

<div class="container">
    {{#if success}}
        <div class="alert alert-success" role="alert">
            {{success}}
        </div>
    {{/if}}
    <h3><a class="add" href="/categorias/create">Crear categoria</a></h3>
    <h2>Lista de categorias</h2>
    {{#if categorias}}
    <table class="table table-hover">
        <thead>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Fecha de creacion</th>
            <th>Acciones</th>
        </thead>
        <tbody>
            {{# each categorias}}
            <tr>
                <td><a href="/categorias/show/{{_id}}">{{ nombre }}</a></td>
                <td class="texto">{{ descripcion }}</td>
                <td>{{ created_at }}</td>
                <td class="opciones"><a class="text-warning" href="/categorias/edit/{{_id}}">Editar</a>
                <form action="/categorias/delete/{{_id}}" method="post">
                    <button type="submit" class="delete"><i class="fas fa-times-circle"></i></button>
                </form></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{~^~}}
    <div>Categorias no encontrados</div>
    {{/if}}
</div>